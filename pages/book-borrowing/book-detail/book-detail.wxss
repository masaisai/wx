/* pages/book-borrowing/book-detail/book-detail.wxss */
.container{height:100%;background:#D7E8FB;padding-top:200rpx;box-sizing:border-box;font-size:26rpx}
.content{height:100%;background:white;text-align:center}
.book-image{width:140rpx;height:200rpx;margin:-100rpx auto 0;}
.book-name{font-size:30rpx;padding:40rpx 0 15rpx;}
.book-author{font-size:26rpx;padding:15rpx 0 30rpx;color:#999}
.book-owner{padding:0 50rpx;margin-bottom:50rpx}
.book-owner .book-owner-title{color:#999;text-align:left;display:block;line-height:60rpx}
.book-owner .book-owner-con{padding-top:20rpx}
.book-owner .book-owner-con .book-owner-item{width:70rpx;height:70rpx;float:left;margin:0 20rpx}
.book-owner .book-owner-con .book-owner-item image{width:70rpx;height:70rpx;display:block}
.book-user{padding:0 50rpx;clear:both;margin-bottom:100rpx}
.book-user .book-user-title{color:#999;text-align:left;display:block;line-height:60rpx}
.book-user .book-user-con{padding-top:20rpx}
.book-user .book-user-con .book-user-item{width:70rpx;height:70rpx;float:left;margin:0 20rpx 20rpx}
.book-user .book-user-con .book-user-item image{width:70rpx;height:70rpx;display:block;border-radius:50%;overflow:hidden}
button.primary-round{width:400rpx;height:70rpx;border-radius:35rpx;text-align:center;line-height:70rpx;font-size:28rpx;background:#169BD5!important;padding:0;margin:0rpx auto;border:none}
button.default-round{width:400rpx;height:70rpx;border-radius:35rpx;text-align:center;line-height:70rpx;font-size:28rpx;padding:0;margin:0rpx auto;border:1px solid #ddd!important}