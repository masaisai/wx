/* pages/daily/daily-comment/daily-comment.wxss */
page{height:100%;margin:0;padding:0}
.container{padding:0;font-size:26rpx;position:relative;height:100%;overflow:auto}
.swiper-item{width:100%;height:100%;background:white;overflow:hidden;padding:20rpx;position:relative;box-sizing:border-box}
.comment{width:100%rpx;height:100%;overflow:auto;padding-bottom:90rpx;box-sizing:border-box}
.comment .comment-title{color:#999;line-height:60rpx;padding:10rpx 40rpx;border-bottom:1rpx solid #eee;margin-bottom: 30rpx}
.comment-item{border-bottom:1rpx solid #eee;padding:20rpx 0}
.comment-item:last-child{border-bottom:none}
.comment-item .left{width:100rpx;float:left;text-align:center;padding-right:20rpx}
.comment-item .left image{width:80rpx;height:80rpx;border-radius:50%;overflow:hidden;display:block;margin:0 auto}
.comment-item .left .username{line-height:60rpx}
.comment-item .right{width:580rpx;float:left}
.comment-item .right .top{height:60rpx;line-height:60rpx;font-size:28rpx}
.comment-item .right .top .username{width:500rpx;float:left;}
.comment-item .right .top .reply{width:70rpx;float:left;}
.comment-item .right .top .remove{width:70rpx;float:left;color:#3e8ef7;}
.comment-item .middle{line-height:40rpx;padding-top:20rpx;padding-bottom:10rpx}
.comment-item .middle .content{}
.comment-item .bottom{line-height:50rpx;padding-top:10rpx}
.comment-item .bottom .time{font-size:26rpx;width:320rpx;float:left;color:#666666}
.comment-item .bottom .remove{font-size:26rpx;width:120rpx;float:left;color:#666666;min-height:40rpx;}
.comment-item .right .bottom .reply{width:120rpx;float:left;color:#666666}
.comment-item .replyCon{padding-left:120rpx;padding-top:20rpx;clear:both;width:580rpx;}
.comment-item .replyCon .reply-item{padding:10px;background:#fafafa;margin-bottom:20rpx;clear:both}
.comment-item .replyCon .reply-item .top{line-height:40rpx;font-size:26rpx;}
.comment-item .replyCon .reply-item .top .username{color:#3e8ef7}
.comment-item .replyCon .reply-item .bottom{line-height:50rpx;padding-top:10rpx}
.comment-item .replyCon .reply-item .bottom .time{width:420rpx;float:left;color:#666666}
.comment-item .replyCon .reply-item .bottom .remove{width:100rpx;float:left;color:#666666}
.comment-item .iconfont{margin-right:10rpx;font-size:26rpx}

.input_null{color: #C9C9C9;}
.release{display: flex;align-items: flex-end;justify-content: space-between;box-sizing: border-box;position: absolute;left: 0;bottom: 0;width: 100%;padding: 18rpx 0 18rpx 30rpx;background-color: #fff;font-size: 28rpx;z-index: 999;border-top:1rpx solid #eee}
.release .text{width: 604rpx;min-height: 34rpx;max-height: 102rpx;border-width: 15rpx 20rpx;border-style: solid;border-color:#f5f5f5;line-height: 34rpx;font-size: 28rpx;background-color:#f5f5f5;border-radius: 4rpx;}
.release .submit{width: 116rpx;height: 64rpx;line-height: 64rpx;text-align: center;color:#3e8ef7;}