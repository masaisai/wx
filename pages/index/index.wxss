/**index.wxss**/
page{height:100%}
.userinfo {
 display:block;
 width:120rpx;
 padding-top:20rpx;
 margin:0rpx auto 20rpx;
 text-align:center;
 margin-bottom:40rpx;
  position:relative
}
.logout{
position:absolute;right:30rpx;top:10rpx;line-height:40rpx;font-size:26rpx;color:white;opacity:0.8
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin:0rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size:28rpx;
  margin-bottom:50rpx
}
.nav{width:720rpx;margin:0 auto 50rpx;}
.nav .navItem{width:220rpx;float:left;text-align:center;color:white;position:relative;padding:10rpx;}
.nav .navItem .num{font-size:28rpx;line-height:50rpx;font-weight:500;color:white}
.nav .navItem .name{font-size:28rpx;line-height:50rpx;color:white;opacity:0.6}
.nav .navItem .line{width:1rpx;height:30rpx;background:white;position:absolute;right:0;top:45rpx;opacity:0.3}

.appList{padding:20rpx;background:white;width:660rpx;margin:0 auto;border-radius:10rpx;}
.appList .appItem{width:165rpx;float:left;padding-top:30rpx;padding-bottom:10rpx}
.appList .appItem .img{width:50rpx;height:50rpx;line-height:50rpx;margin:0 auto 5rpx;display:block;position:relative}
.appList .appItem .img .iconfont{font-size:44rpx!important}
.appList .appItem .img image{width:50rpx;height:50rpx;}
.appList .appItem .img .num{height:30rpx;background:red;color:white;text-align:center;padding:0 6rpx;font-size:24rpx;display:inline-block;line-height:30rpx;border-radius:15rpx;position:absolute;top:-10rpx;right:-10rpx;min-width:30rpx;box-sizing:border-box}
.appList .appItem .title{font-size:26rpx!important;color:#666;line-height:60rpx;display:block;}
button.wrap-btn{overflow:visible!important}
.version{width:100%;height:34rpx;line-height:34rpx;font-size:20rpx;color:rgba(255, 255,255,0.6);position:fixed;bottom:0;left:0;display:block;text-align:right;padding-right:20rpx;box-sizing:border-box}